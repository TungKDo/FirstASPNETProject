@page "{name?}"



@model GreetingModel


<div>@Model.CurrentGreeting</div>

<table>
    @foreach (var item in Model.restaurants)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">More</a>
            </td>
        </tr>
    }
</table>
